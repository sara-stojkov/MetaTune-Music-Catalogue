<Page x:Class="MetaTune.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Background="#2C2C2C">

    <Grid>
        <Border Width="400" Height="500" 
                Background="#3B3B3B" 
                CornerRadius="10"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Dobrodošli" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="nazad!" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Email Input -->
                <TextBlock Text="Unesi email:" 
                           Foreground="#CCCCCC" 
                           FontSize="18"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtEmail"
                         Height="40" 
                         Background="#505050" 
                         Foreground="White"
                         BorderBrush="#606060"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,20"/>

                <!-- Password Input -->
                <TextBlock Text="Unesi lozinku:" 
                           Foreground="#CCCCCC" 
                           FontSize="18"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="txtPassword"
                             Height="40" 
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             Padding="10,0"
                             FontSize="14"
                             Margin="0,0,0,40"/>
                <Button x:Name="btnLogin"
                        Content="Uloguj se" 
                        Height="55" 
                        Background="#7B4FB8" 
                        Foreground="White"
                        FontSize="24"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#7B4FB8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="20,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8B5FC8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Login Button -->
            </StackPanel>
        </Border>
    </Grid>
</Page>