<Page x:Class="MetaTune.View.Auth.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="400"
      Background="#2C2C2C">

    <Grid>
        <Border Width="400" Height="640" 
                Background="#3B3B3B" 
                CornerRadius="10">
            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Unesite svoje" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="podatke:" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Name Input -->
                <TextBlock Text="Unesi ime:" 
                           Foreground="#CCCCCC" 
                           FontSize="16"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtName"
                         Height="40" 
                         Background="#505050" 
                         Foreground="White"
                         BorderBrush="#606060"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="16"
                         Margin="0,0,0,15"/>

                <!-- Surname Input -->
                <TextBlock Text="Unesi prezime:" 
                           Foreground="#CCCCCC" 
                           FontSize="16"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtSurname"
                         Height="40" 
                         Background="#505050" 
                         Foreground="White"
                         BorderBrush="#606060"
                             VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Email Input -->
                <TextBlock Text="Unesi email:" 
                           Foreground="#CCCCCC" 
                           FontSize="16"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtEmail"
                         Height="40" 
                         Background="#505050" 
                         Foreground="White"
                             VerticalContentAlignment="Center"
                         BorderBrush="#606060"
                         BorderThickness="1"
                         Padding="10,0"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Password Input -->
                <TextBlock Text="Unesi lozinku:" 
                           Foreground="#CCCCCC" 
                           FontSize="16"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="40" 
                             VerticalContentAlignment="Center"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             Padding="10,0"
                             FontSize="14"
                             Margin="0,0,0,30"/>

                <!-- Register Button -->
                <Button x:Name="btnRegister"
                        Content="Registuj se" 
                        Height="55" 
                        Background="#7B4FB8" 
                        Foreground="White"
                        FontSize="22"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#7B4FB8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="20,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8B5FC8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Foreground="#CCCCCC"  HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="14" >
                    <Run Text="Već imate nalog? "/>
                    <Hyperlink Click="SignUpHyperlink_Click" Foreground="#fff" FontWeight="Bold">
                        <Run Text="Ulogujte se"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>