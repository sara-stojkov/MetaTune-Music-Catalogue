<Page x:Class="MetaTune.View.Auth.VerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Background="#2C2C2C">

    <Grid>
        <Border Width="400" Height="450" 
                Background="#3B3B3B" 
                CornerRadius="10"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <StackPanel Margin="40" VerticalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Unesite kod za" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="potvrdu:" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Verification Code Boxes -->
                <UniformGrid Rows="1" Columns="6" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,40">
                    <TextBox x:Name="txtCode1" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                    <TextBox x:Name="txtCode2" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                    <TextBox x:Name="txtCode3" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                    <TextBox x:Name="txtCode4" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                    <TextBox x:Name="txtCode5" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                    <TextBox x:Name="txtCode6" 
                             Width="45" Height="50" 
                             Margin="5"
                             Background="#505050" 
                             Foreground="White"
                             BorderBrush="#606060"
                             BorderThickness="1"
                             FontSize="24"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             MaxLength="1"
                             />
                </UniformGrid>
                <Button x:Name="btnVerify"
                        Content="Potvrdi" 
                        Height="60" 
                        Background="#7B4FB8" 
                        Foreground="White"
                        FontSize="24"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#7B4FB8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5"
                                                Padding="20,10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8B5FC8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Verify Button -->
            </StackPanel>
        </Border>
    </Grid>
</Page>