<Page x:Class="MetaTune.View.SearchHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Pretraga - SearchPage"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="100" VerticalAlignment="Top">
                <!-- App Title -->
                <TextBlock Text="MetaTune - Vaša muzička enciklopedija" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="40,0,0,0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF7B1FA2" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Buttons Container -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,25,40,0">

                    <!-- Back Button -->
                    <Button Content="← Idi nazad" 
                            Width="160" 
                            Height="55"
                            Background="IndianRed"
                            Foreground="White"
                            FontSize="24"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Margin="0,0,20,0"
                            Click="BackButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE53935"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FFC62828"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Login Button -->
                    <Button Content="Uloguj se" 
                            Width="150" 
                            Height="55"
                            Background="#FF7B1FA2"
                            Foreground="White"
                            FontSize="28"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Click="LoginButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF9C27B0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF6A1B9A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Search Bar Section -->
            <Grid Height="70" VerticalAlignment="Top" Margin="40,100,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search TextBox -->
                <Border Grid.Column="0"
						Height="55"
                        Background="#FF5A5A5A"
                        CornerRadius="8"
                        Margin="0,0,20,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBox x:Name="SearchTextBox"
                             Height="50"
                             FontSize="20"
                             Padding="20,0"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <!-- Search Button -->
                <Button Grid.Column="1"
                        Content="🔍 Pretraži"
                        Width="170"
                        Height="55"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Medium"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SearchButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF9C27B0"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Filters Section -->
            <Grid Height="80" VerticalAlignment="Top" Margin="0,180,0,0">
                <Border Background="#FF3E3E3E"
                        CornerRadius="8"
                        Margin="40,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" 
                                Margin="30,0" 
                                VerticalAlignment="Center">

                        <!-- Genre Filter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Žanr:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <ComboBox x:Name="GenreComboBox"
                                     Width="150"
                                     Height="35"
                                     FontSize="16"
                                     Background="#FF5A5A5A" 
                                     Foreground="White"
                                     BorderThickness="0">
                                <ComboBox.Resources>
                                    <!-- Style for the dropdown popup -->
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <ToggleButton 
                                                            x:Name="ToggleButton"
                                                            Background="{TemplateBinding Background}"
                                                            BorderThickness="0"
                                                            Focusable="False"
                                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                            ClickMode="Press">
                                                            <ToggleButton.Template>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="#FF5A5A5A" CornerRadius="4">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition/>
                                                                                <ColumnDefinition Width="20"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <ContentPresenter Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                                            <Path Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Grid>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </ToggleButton.Template>
                                                        </ToggleButton>
                                                        <ContentPresenter 
                                                            x:Name="ContentSite"
                                                            IsHitTestVisible="False"
                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                            Margin="10,0,30,0"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left"/>
                                                        <Popup 
                                                            x:Name="Popup"
                                                            Placement="Bottom"
                                                            IsOpen="{TemplateBinding IsDropDownOpen}"
                                                            AllowsTransparency="True"
                                                            Focusable="False"
                                                            PopupAnimation="Slide">
                                                            <Grid MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                                                <Border Background="#FF3E3E3E" BorderThickness="0" CornerRadius="4">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                                                                    </Border.Effect>
                                                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Resources>
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Background" Value="#FF3E3E3E"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBoxItem">
                                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF7B1FA2"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FF6A1B9A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                                <ComboBoxItem Content="Svi žanrovi" IsSelected="True"/>
                                <ComboBoxItem Content="Rock"/>
                                <ComboBoxItem Content="Pop"/>
                                <ComboBoxItem Content="Jazz"/>
                                <ComboBoxItem Content="Classical"/>
                                <ComboBoxItem Content="Hip Hop"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Folk"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Type Checkboxes -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Tip:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            <CheckBox x:Name="ArtistCheckBox"
                                     Content="Izvođači"
                                     Foreground="White"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"
                                     IsChecked="True"/>
                            <CheckBox x:Name="SongCheckBox"
                                     Content="Pesme"
                                     Foreground="White"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     IsChecked="True"/>
                        </StackPanel>

                        <!-- Year From -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Od godine:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox x:Name="YearFromTextBox"
                                    Width="80"
                                    Height="35"
                                    FontSize="16"
                                    Padding="10,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Text="1900"/>
                        </StackPanel>

                        <!-- Year To -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Do godine:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox x:Name="YearToTextBox"
                                    Width="80"
                                    Height="35"
                                    FontSize="16"
                                    Padding="10,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Text="2025"/>
                        </StackPanel>

                        <!-- Apply Filters Button -->
                        <Button Content="☰ Primeni"
                               Width="100"
                               Height="35"
                               Background="#FF7B1FA2"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               BorderThickness="0"
                               Margin="0,0,15,0"
                               Click="ApplyFiltersButton_Click"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Clear Filters Button -->
                        <Button Content="❌ Resetuj"
                               Width="100"
                               Height="35"
                               Background="#A5282A"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               BorderThickness="0"
                               Click="ClearFiltersButton_Click"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE57373"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FFEF5350"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Main Content - Search Results -->
            <Grid Margin="40,280,40,40">
                <Border Background="#FF3E3E3E"
                        CornerRadius="12">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                    </Border.Effect>
                    <Grid>
                        <!-- Section Title -->
                        <Border Height="60" 
                                CornerRadius="12,12,0,0"
                                VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF2E2E2E" Offset="0"/>
                                    <GradientStop Color="#FF3E3E3E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock x:Name="ResultsTitle"
                                      Text="🔍 Rezultati pretrage" 
                                      FontSize="28" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Results List -->
                        <ScrollViewer Margin="0,60,0,0" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="SearchResultsItemsControl" Margin="20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF4A4A4A"
                                                CornerRadius="8"
                                                Margin="0,0,0,12"
                                                Padding="20,15"
                                                Cursor="Hand">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                                            </Border.Effect>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                       To="1.02" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                       To="1.02" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                       To="1" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                       To="1" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Type Icon -->
                                                <Border Grid.Column="0"
                                                        Width="55"
                                                        Height="55"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="27.5"
                                                        Margin="0,0,20,0">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{Binding TypeColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding TypeIcon}"
                                                              FontSize="26"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Content Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}"
                                                              FontSize="20"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Subtitle}"
                                                              FontSize="16"
                                                              Foreground="#FFCCCCCC"/>
                                                </StackPanel>

                                                <!-- Type Badge -->
                                                <Border Grid.Column="2"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="6"
                                                        Padding="14,8"
                                                        Margin="0,0,20,0"
                                                        VerticalAlignment="Center">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                              FontSize="13"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Additional Info -->
                                                <TextBlock Grid.Column="3"
                                                          Text="{Binding AdditionalInfo}"
                                                          FontSize="16"
                                                          Foreground="#FFAAAAAA"
                                                          VerticalAlignment="Center"
                                                          FontWeight="Medium"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>