<Page x:Class="MetaTune.View.SearchHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Pretraga - SearchPage"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="100" VerticalAlignment="Top">
                <!-- App Title -->
                <TextBlock Text="MetaTune - Vaša muzička enciklopedija" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="40,0,0,0"/>

                <!-- Login Button -->
                <Button Content="Uloguj se" 
                        Width="150" 
                        Height="55"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Medium"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Margin="0,25,40,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Search Bar Section -->
            <Grid Height="70" VerticalAlignment="Top" Margin="0,100,0,0">
                <Grid MaxWidth="800" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search TextBox -->
                    <TextBox Grid.Column="0"
                             x:Name="SearchTextBox"
                             Height="50"
                             Width="300"
                             Margin="0,0,30,0"
                             FontSize="18"
                             Padding="15,0"
                             Background="#FF5A5A5A"
                             Foreground="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4,0,0,4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- Search Button -->
                    <Button Grid.Column="1"
                            Content="🔍 Pretraži"
                            Width="140"
                            Height="50"
                            Background="#FF7B1FA2"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="0,4,4,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6A1B9A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>

            <!-- Filters Section -->
            <Grid Height="80" VerticalAlignment="Top" Margin="0,180,0,0">
                <Border Background="#FF3E3E3E"
                        CornerRadius="8"
                        Margin="40,0">
                    <StackPanel Orientation="Horizontal" 
                                Margin="30,0" 
                                VerticalAlignment="Center">

                        <!-- Genre Filter -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Žanr:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <ComboBox x:Name="GenreComboBox"
                                     Width="170"
                                     Height="35"
                                     FontSize="16"
                                     Background="#FF5A5A5A"
                                     Foreground="White"
                                     BorderThickness="0">
                                <ComboBoxItem Content="Svi žanrovi" IsSelected="True"/>
                                <ComboBoxItem Content="Rock"/>
                                <ComboBoxItem Content="Pop"/>
                                <ComboBoxItem Content="Jazz"/>
                                <ComboBoxItem Content="Classical"/>
                                <ComboBoxItem Content="Hip Hop"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Folk"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Type Checkboxes -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Tip:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,15,0"/>
                            <CheckBox x:Name="ArtistCheckBox"
                                     Content="Izvođači"
                                     Foreground="White"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     Margin="0,0,15,0"
                                     IsChecked="True"/>
                            <CheckBox x:Name="SongCheckBox"
                                     Content="Pesme"
                                     Foreground="White"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     IsChecked="True"/>
                        </StackPanel>

                        <!-- Year From -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Od godine:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox x:Name="YearFromTextBox"
                                    Width="80"
                                    Height="35"
                                    FontSize="16"
                                    Padding="10,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Text="1900"/>
                        </StackPanel>

                        <!-- Year To -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                            <TextBlock Text="Do godine:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"/>
                            <TextBox x:Name="YearToTextBox"
                                    Width="80"
                                    Height="35"
                                    FontSize="16"
                                    Padding="10,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"
                                    Text="2025"/>
                        </StackPanel>

                        <!-- Apply Filters Button -->
                        <Button Content="☰ Primeni filtere"
                               Width="180"
                               Height="35"
                               Background="#FF7B1FA2"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               BorderThickness="0"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Main Content - Search Results -->
            <Grid Margin="40,320,40,40">
                <Border Background="#FF3E3E3E"
                        CornerRadius="8">
                    <Grid>
                        <!-- Section Title -->
                        <Border Height="60" 
                                Background="#FF2E2E2E" 
                                CornerRadius="8,8,0,0"
                                VerticalAlignment="Top">
                            <TextBlock x:Name="ResultsTitle"
                                      Text="Rezultati pretrage" 
                                      FontSize="28" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Results List -->
                        <ScrollViewer Margin="0,60,0,0" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="SearchResultsItemsControl" Margin="20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF4A4A4A"
                                                CornerRadius="6"
                                                Margin="0,0,0,15"
                                                Padding="20,15"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Type Icon -->
                                                <Border Grid.Column="0"
                                                        Width="50"
                                                        Height="50"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="25"
                                                        Margin="0,0,20,0">
                                                    <TextBlock Text="{Binding TypeIcon}"
                                                              FontSize="24"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Content Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}"
                                                              FontSize="20"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Subtitle}"
                                                              FontSize="16"
                                                              Foreground="#FFAAAAAA"/>
                                                </StackPanel>

                                                <!-- Type Badge -->
                                                <Border Grid.Column="2"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="4"
                                                        Padding="12,6"
                                                        Margin="0,0,15,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                              FontSize="14"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Additional Info -->
                                                <TextBlock Grid.Column="3"
                                                          Text="{Binding AdditionalInfo}"
                                                          FontSize="16"
                                                          Foreground="#FFAAAAAA"
                                                          VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>