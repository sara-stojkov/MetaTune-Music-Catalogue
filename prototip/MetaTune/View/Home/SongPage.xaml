<Page x:Class="MetaTune.View.Home.SongPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:converters="clr-namespace:MetaTune.ViewModel.Converters"
      mc:Ignorable="d" 
      Background="#FF4A4A4A">

    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Back Button -->
        <Button x:Name="BackButton"
                Content="← Nazad"
                Width="120"
                Height="45"
                Background="#FF5A5A5A"
                Foreground="White"
                FontSize="16"
                FontWeight="Medium"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="30,30,0,0" 
                Click="BackButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF6A6A6A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Main Content -->
        <ScrollViewer Margin="0,100,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,0,50,50">

                <!-- Song Header -->
                <Border Background="#FF7B1FA2" 
                        CornerRadius="8"
                        Padding="40,30"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding SongName}"
                                      FontSize="36" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding ArtistNames}"
                                      FontSize="20"
                                      Foreground="#FFE0E0E0"
                                      Margin="0,0,0,5"/>

                            <TextBlock Text="{Binding PublishDate, StringFormat=Godina: {0:yyyy}}"
                                      FontSize="16"
                                      Foreground="#FFCCCCCC"/>
                        </StackPanel>

                        <!-- Average Rating -->
                        <StackPanel Grid.Column="1" 
                                   Orientation="Horizontal"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding AverageRating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="★" FontSize="32" Foreground="#FFFFD700" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}"
                                      FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="/5" FontSize="24" Foreground="#FFB0B0B0"
                                      VerticalAlignment="Bottom" Margin="5,0,0,3"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Album Section -->
                <Border Background="#FF5A5A5A" 
                        CornerRadius="8"
                        Padding="30,20"
                        Margin="0,0,0,20"
                        Cursor="Hand"
                        MouseLeftButtonUp="AlbumBorder_Click"
                        Visibility="{Binding HasAlbum, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A6A6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💿" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Sa albuma:" FontSize="14" Foreground="#FFB0B0B0" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding AlbumName}" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Mock Player -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Plejer (mock)" FontSize="20" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding CurrentPositionFormatted}"
                                      FontSize="14" Foreground="#FFB0B0B0" Margin="0,0,10,0"/>
                            <Slider Grid.Column="1" Value="{Binding CurrentPosition}"
                                   Maximum="{Binding TotalDuration}" VerticalAlignment="Center" 
                                   Foreground="#FF7B1FA2"/>
                            <TextBlock Grid.Column="2" Text="{Binding TotalDurationFormatted}"
                                      FontSize="14" Foreground="#FFB0B0B0" Margin="10,0,0,0"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Command="{Binding PlayPauseCommand}"
                                   Content="{Binding PlayPauseButtonText}"
                                   Width="120" Height="45" Background="#FF7B1FA2"
                                   Foreground="White" FontSize="16" FontWeight="Medium"
                                   BorderThickness="0" Cursor="Hand" Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF6A1B9A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Command="{Binding StopCommand}" Content="⏹ Stop"
                                   Width="100" Height="45" Background="#FF5A5A5A"
                                   Foreground="White" FontSize="16" FontWeight="Medium"
                                   BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF6A6A6A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Artists -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,20"
                        Visibility="{Binding HasArtists, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Izvođači" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding Artists}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20,15"
                                            Margin="0,0,0,10" Cursor="Hand"
                                            MouseLeftButtonUp="Artist_Click" Tag="{Binding AuthorId}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF6A6A6A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="👤" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <TextBlock Text="{Binding AuthorName}" FontSize="18" 
                                                      FontWeight="Medium" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Production Team -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,20"
                        Visibility="{Binding HasContributors, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Produkcija" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding Contributors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20,15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding PersonName}"
                                                      FontSize="16" FontWeight="Medium" Foreground="White" 
                                                      VerticalAlignment="Center"/>

                                            <Border Grid.Column="1" Background="#FF7B1FA2" 
                                                   CornerRadius="4" Padding="12,6">
                                                <TextBlock Text="{Binding ContributionType}"
                                                          FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,20"
                        Visibility="{Binding HasDescription, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Opis" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>
                        <TextBlock Text="{Binding SongDescription}" FontSize="16"
                                  Foreground="#FFE0E0E0" TextWrapping="Wrap" LineHeight="24"/>
                    </StackPanel>
                </Border>

                <!-- Editor Review and Rating -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30"
                        BorderBrush="#FFFF9800" BorderThickness="4"
                        Visibility="{Binding EditorReviewWithRating, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✍️ " FontSize="28" Margin="0,0,10,0"/>
                            <TextBlock Text="Urednikova recenzija" FontSize="26" FontWeight="Bold"
                                      Foreground="#FFFF9800" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Editor Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20"
                                   Visibility="{Binding EditorReviewWithRating.Rating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="★" FontSize="36" Foreground="#FFFFD700" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding EditorReviewWithRating.Rating, StringFormat={}{0:F1}}" 
                                      FontSize="36" FontWeight="Bold" Foreground="#FFFF9800"/>
                            <TextBlock Text=" / 5.0" FontSize="26" Foreground="#FFB0B0B0"
                                      VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                        </StackPanel>

                        <!-- Editor Review Content -->

                        <TextBlock Text="{Binding EditorReviewWithRating.Review.DisplayName}" 
                                  FontSize="18" TextWrapping="Wrap" Foreground="#FFFFFF"
                                  LineHeight="24" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="{Binding EditorReviewWithRating.Review.Content}" 
                                  FontSize="16" TextWrapping="Wrap" Foreground="#FFE0E0E0"
                                  LineHeight="24" Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding EditorReviewWithRating.Review.ReviewDate, StringFormat=Datum: {0:dd.MM.yyyy}}" 
                                  FontSize="14" Foreground="#FFB0B0B0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- User Rating -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Vaša ocena" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="RatingSlider" Value="{Binding NewRatingValue}"
                                   Minimum="1" Maximum="5" TickFrequency="0.5" IsSnapToTickEnabled="True"
                                   Width="300" VerticalAlignment="Center" Margin="0,0,20,0"/>

                            <TextBlock Text="{Binding NewRatingValue, StringFormat={}{0:F1}}"
                                      FontSize="24" FontWeight="Bold" Foreground="#FFFFD700"
                                      VerticalAlignment="Center" Margin="0,0,20,0"/>

                            <Button Command="{Binding LeaveRatingCommand}" Content="Sačuvaj ocenu"
                                   Height="40" Padding="20,0" Background="#FF7B1FA2"
                                   Foreground="White" FontSize="14" FontWeight="Medium"
                                   BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF6A1B9A"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <TextBlock Visibility="{Binding UserRating, Converter={StaticResource NullToVisibilityConverter}}"
                                  Margin="0,15,0,0">
                            <Run Text="Vaša trenutna ocena: " Foreground="#FFB0B0B0" FontSize="14"/>
                            <Run Text="{Binding UserRating, StringFormat={}{0:F1}}" Foreground="#FFFFD700" FontSize="16" FontWeight="Bold"/>
                            <Run Text="★" Foreground="#FFFFD700" FontSize="16"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- User Reviews -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30">
                    <StackPanel>
                        <TextBlock Text="Korisničke recenzije" FontSize="24" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <!-- Add Review -->
                        <Border Background="#FF5A5A5A" CornerRadius="6" Padding="25,20" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Napišite recenziju" FontSize="16" FontWeight="SemiBold"
                                          Foreground="White" Margin="0,0,0,10"/>

                                <TextBox Text="{Binding NewReviewContent, UpdateSourceTrigger=PropertyChanged}"
                                        MinHeight="100" MaxHeight="200" TextWrapping="Wrap"
                                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                        Background="#FF4A4A4A" Foreground="White"
                                        BorderBrush="#FF7B1FA2" BorderThickness="2"
                                        Padding="10" FontSize="14" Margin="0,0,0,15"/>

                                <Button Command="{Binding LeaveReviewCommand}" Content="Objavi recenziju"
                                       Height="40" Padding="30,0" Background="#FF7B1FA2"
                                       Foreground="White" FontSize="14" FontWeight="Medium"
                                       BorderThickness="0" Cursor="Hand" HorizontalAlignment="Right">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Reviews List -->
                        <ItemsControl ItemsSource="{Binding UserReviews}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="25,20" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding DisplayName}"
                                                       FontSize="15" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding ReviewDate, StringFormat=dd.MM.yyyy}"
                                                      FontSize="13" Foreground="#FFB0B0B0" Margin="0,0,0,10"/>

                                            <TextBlock Grid.Row="2" Text="{Binding Content}"
                                                      FontSize="15" Foreground="#FFE0E0E0"
                                                      TextWrapping="Wrap" LineHeight="22"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#FF5A5A5A" CornerRadius="6" Padding="40">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserReviews.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Još uvek nema recenzija" FontSize="18"
                                          Foreground="#FFB0B0B0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Budite prvi koji će ostaviti recenziju!" FontSize="14"
                                          Foreground="#FF909090" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
