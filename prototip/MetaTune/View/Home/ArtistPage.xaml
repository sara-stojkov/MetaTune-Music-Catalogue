<Page x:Class="MetaTune.View.Home.ArtistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:converters="clr-namespace:MetaTune.ViewModel.Converters"
      mc:Ignorable="d" 
      Background="#FF4A4A4A">

    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Back Button -->
        <Button x:Name="BackButton"
                Content="← Nazad"
                Width="120"
                Height="45"
                Background="#FF5A5A5A"
                Foreground="White"
                FontSize="16"
                FontWeight="Medium"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="30,30,0,0" 
                Click="BackButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF6A6A6A"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Main Content -->
        <ScrollViewer Margin="0,100,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="50,0,50,50">

                <!-- Artist Header -->
                <Border Background="#FF7B1FA2" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Artist Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                  Text="{Binding ArtistName}"
                                  FontSize="36" FontWeight="Bold"
                                  Foreground="White" VerticalAlignment="Center"/>

                        <!-- Average Rating -->
                        <StackPanel Grid.Row="0" Grid.Column="1" 
                                   Orientation="Horizontal" VerticalAlignment="Center"
                                   Visibility="{Binding AverageRating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="★" FontSize="32" Foreground="#FFFFD700" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}"
                                      FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="/5" FontSize="24" Foreground="#FFB0B0B0"
                                      VerticalAlignment="Bottom" Margin="5,0,0,3"/>
                        </StackPanel>

                        <!-- Genre -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                  Text="{Binding GenreName}"
                                  FontSize="18" Foreground="#FFE1BEE7"
                                  Margin="0,10,0,0"
                                  Visibility="{Binding GenreName, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- Biography -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30"
                        Visibility="{Binding ArtistBiography, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Biografija izvođača" FontSize="24" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding ArtistBiography}"
                                      FontSize="16" Foreground="#FFE0E0E0"
                                      TextWrapping="Wrap" LineHeight="24"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Band Memberships -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30"
                        Visibility="{Binding HasBandMemberships, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Bendovi" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding BandMemberships}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20"
                                            Margin="0,0,0,15" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding DataContext.NavigateToArtistCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF6A6A6A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding BandName}" FontSize="18" 
                                                           FontWeight="Bold" Foreground="White"/>
                                                <Border Background="#FF4CAF50" CornerRadius="3"
                                                       Padding="8,2" Margin="15,0,0,0" VerticalAlignment="Center"
                                                       Visibility="{Binding IsCurrent, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding StatusText}" FontSize="12" 
                                                               Foreground="White" FontWeight="Medium"/>
                                                </Border>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1" Text="{Binding MembershipPeriod}" 
                                                       FontSize="15" Foreground="#FFB0B0B0" Margin="0,8,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Band Members -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30"
                        Visibility="{Binding HasBandMembers, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Članovi benda" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding BandMembers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20"
                                            Margin="0,0,0,15" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding DataContext.NavigateToArtistCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF6A6A6A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock Text="{Binding MemberName}" FontSize="18" 
                                                           FontWeight="Bold" Foreground="White"/>
                                                <Border Background="#FF4CAF50" CornerRadius="3"
                                                       Padding="8,2" Margin="15,0,0,0" VerticalAlignment="Center"
                                                       Visibility="{Binding IsCurrent, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding StatusText}" FontSize="12" 
                                                               Foreground="White" FontWeight="Medium"/>
                                                </Border>
                                            </StackPanel>

                                            <TextBlock Grid.Row="1" Text="{Binding MembershipPeriod}" 
                                                       FontSize="15" Foreground="#FFB0B0B0" Margin="0,8,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Songs List -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Pesme" FontSize="24" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding Songs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20"
                                            Margin="0,0,0,12" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                         Command="{Binding DataContext.NavigateToSongCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF6A6A6A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding WorkName}" 
                                                       FontSize="17" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding PublishDate, StringFormat=Godina: {0:yyyy}}" 
                                                       FontSize="14" Foreground="#FFB0B0B0" Margin="0,6,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#FF5A5A5A" CornerRadius="6" Padding="40">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Songs.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Nema dostupnih pesama" FontSize="16"
                                      Foreground="#FFB0B0B0" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Editor Review and Rating -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30"
                        BorderBrush="#FFFF9800" BorderThickness="4"
                        Visibility="{Binding EditorReviewWithRating, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✍️ " FontSize="28" Margin="0,0,10,0"/>
                            <TextBlock Text="Urednikova recenzija" FontSize="26" FontWeight="Bold"
                                      Foreground="#FFFF9800" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Editor Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20"
                                   Visibility="{Binding EditorReviewWithRating.Rating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="★" FontSize="36" Foreground="#FFFFD700" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding EditorReviewWithRating.Rating, StringFormat={}{0:F1}}" 
                                      FontSize="36" FontWeight="Bold" Foreground="#FFFF9800"/>
                            <TextBlock Text=" / 5.0" FontSize="26" Foreground="#FFB0B0B0"
                                      VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                        </StackPanel>

                        <!-- Editor Review Content -->
                        <TextBlock Text="{Binding EditorReviewWithRating.Review.DisplayName}"
                                   FontSize="20" TextWrapping="Wrap" Foreground="Beige"
                                   LineHeight="24" Margin="0,0,0,15"
                                   />
                        <TextBlock Text="{Binding EditorReviewWithRating.Review.Content}" 
                                  FontSize="16" TextWrapping="Wrap" Foreground="#FFE0E0E0"
                                  LineHeight="24" Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding EditorReviewWithRating.Review.ReviewDate, StringFormat=Datum: {0:dd.MM.yyyy}}" 
                                  FontSize="14" Foreground="#FFB0B0B0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- User Ratings -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Korisničke ocene" FontSize="24" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding UserRatings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="20" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                                <TextBlock Text="★" FontSize="24" Foreground="#FFFFD700" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Value, StringFormat={}{0:F1}}" 
                                                          FontSize="24" FontWeight="Bold" Foreground="White"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding RatingDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                                       FontSize="15" Foreground="#FFB0B0B0" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#FF5A5A5A" CornerRadius="6" Padding="40">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserRatings.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Još nema korisničkih ocena" FontSize="16"
                                      Foreground="#FFB0B0B0" HorizontalAlignment="Center" FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- User Reviews -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Korisničke recenzije" FontSize="24" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding UserReviews}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF5A5A5A" CornerRadius="6" Padding="25,20" Margin="0,0,0,15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" 
                                                       Text="{Binding DisplayName}" FontSize="16" FontWeight="Bold"
                                                       Foreground="White" Margin="0,0,0,5"/>

                                            <TextBlock Grid.Row="1"
                                                      Text="{Binding ReviewDate, StringFormat=dd.MM.yyyy}"
                                                      FontSize="13" Foreground="#FFB0B0B0" Margin="0,0,0,10"/>

                                            <TextBlock Grid.Row="2" Text="{Binding Content}"
                                                      FontSize="15" Foreground="#FFE0E0E0"
                                                      TextWrapping="Wrap" LineHeight="22"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <Border Background="#FF5A5A5A" CornerRadius="6" Padding="40">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserReviews.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Još uvek nema recenzija" FontSize="18"
                                          Foreground="#FFB0B0B0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="Budite prvi koji će ostaviti recenziju!" FontSize="14"
                                          Foreground="#FF909090" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Leave Rating -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Ostavi ocenu" FontSize="22" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="Ocena (1-5): " FontSize="16" Foreground="#FFE0E0E0"
                                      VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBox Text="{Binding NewRatingValue, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="80" Height="35" FontSize="16" Padding="10,5"
                                    Background="#FF5A5A5A" Foreground="White"
                                    BorderBrush="#FF7B7B7B" BorderThickness="1"/>
                        </StackPanel>

                        <Button Content="Ostavi ocenu" Command="{Binding LeaveRatingCommand}"
                                Width="180" Height="45" Background="#FF4CAF50"
                                Foreground="White" FontSize="16" FontWeight="Medium"
                                BorderThickness="0" Cursor="Hand" HorizontalAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF45A049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Leave Review -->
                <Border Background="#FF3E3E3E" CornerRadius="8" Padding="40,30" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Ostavi recenziju" FontSize="22" FontWeight="Bold"
                                  Foreground="White" Margin="0,0,0,20"/>

                        <TextBox Text="{Binding NewReviewContent, UpdateSourceTrigger=PropertyChanged}" 
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="150"
                                 Padding="15" FontSize="15" Background="#FF5A5A5A"
                                 Foreground="White" BorderBrush="#FF7B7B7B" BorderThickness="1"
                                 Margin="0,0,0,20" VerticalScrollBarVisibility="Auto"/>

                        <Button Content="Objavi recenziju" Command="{Binding LeaveReviewCommand}"
                                Width="200" Height="45" Background="#FF7B1FA2"
                                Foreground="White" FontSize="16" FontWeight="Medium"
                                BorderThickness="0" Cursor="Hand" HorizontalAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>