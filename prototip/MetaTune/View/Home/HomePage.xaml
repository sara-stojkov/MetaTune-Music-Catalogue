<Page x:Class="MetaTune.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Neregistrovani - HomePage"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="100" VerticalAlignment="Top">
                <!-- App Title with gradient effect -->
                <TextBlock Text="🎵 MetaTune - Vaša muzička enciklopedija" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="40,0,0,0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF7B1FA2" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Login Button -->
                <Button Content="👤 Uloguj se" 
                        Width="200" 
                        Height="55"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Medium"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Margin="0,25,40,0"
                        Click="LoginButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF9C27B0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Search Bar Section - Wider and Better Positioned -->
            <Grid Height="70" VerticalAlignment="Top" Margin="40,100,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search TextBox - Much Wider -->
                <Border Grid.Column="0"
						Height="55"
                        Background="#FF5A5A5A"
                        CornerRadius="8"
                        Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBox x:Name="SearchTextBox"
                             Height="50"
                             FontSize="20"
                             Padding="20,0"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"
                             VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                <!-- Search Button - Far Right -->
                <Button Grid.Column="1"
                        Content="🔍 Pretraži"
                        Width="170"
                        Height="55"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        FontSize="28"
                        FontWeight="Medium"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SearchButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF9C27B0"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main Content - New Content Grid with animations -->
            <Grid Margin="40,190,40,40">
                <Border Background="#FF3E3E3E"
                        CornerRadius="12">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                    </Border.Effect>
                    <Grid>
                        <!-- Section Title with gradient background -->
                        <Border Height="60" 
                                CornerRadius="12,12,0,0"
                                VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF2E2E2E" Offset="0"/>
                                    <GradientStop Color="#FF3E3E3E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="🌟 Pogledajte najnoviji sadržaj: " 
                                      FontSize="28" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Content List -->
                        <ScrollViewer Margin="0,60,0,0" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="NewContentItemsControl" Margin="20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF4A4A4A"
                                                CornerRadius="8"
                                                Margin="0,0,0,12"
                                                Padding="20,15"
                                                MouseLeftButtonUp="ContentItem_Click"
                                                Cursor="Hand">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                                            </Border.Effect>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                       To="1.02" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                       To="1.02" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                       To="1" Duration="0:0:0.15"/>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                       To="1" Duration="0:0:0.15"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Type Icon with glow effect -->
                                                <Border Grid.Column="0"
                                                        Width="55"
                                                        Height="55"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="27.5"
                                                        Margin="0,0,20,0">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{Binding TypeColor}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding TypeIcon}"
                                                              FontSize="26"
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Content Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}"
                                                              FontSize="20"
                                                              FontWeight="SemiBold"
                                                              Foreground="White"
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Subtitle}"
                                                              FontSize="16"
                                                              Foreground="#FFCCCCCC"/>
                                                </StackPanel>

                                                <!-- Type Badge with glow -->
                                                <Border Grid.Column="2"
                                                        Background="{Binding TypeColor}"
                                                        CornerRadius="6"
                                                        Padding="14,8"
                                                        Margin="0,0,20,0"
                                                        VerticalAlignment="Center">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                              FontSize="13"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Date Added -->
                                                <TextBlock Grid.Column="3"
                                                          Text="{Binding DateAdded, StringFormat='dd.MM.yyyy'}"
                                                          FontSize="16"
                                                          Foreground="#FFAAAAAA"
                                                          VerticalAlignment="Center"
                                                          FontWeight="Medium"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>