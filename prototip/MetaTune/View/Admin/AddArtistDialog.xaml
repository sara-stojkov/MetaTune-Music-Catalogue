<Window x:Class="MetaTune.View.Admin.AddArtistDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="1100" d:DesignWidth="1200"
      Title="Dodavanje izvođača"
      Background="#FF4A4A4A">

    <Window.Resources>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7B1FA2"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF7B1FA2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                Grid.Column="2"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <ContentPresenter Grid.Column="0"
                                                        Content="{TemplateBinding Content}"
                                                        VerticalAlignment="Center"
                                                        Margin="10,0,0,0"/>

                                                <Path Grid.Column="1"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="White"
                                              VerticalAlignment="Center"
                                              Margin="0,0,15,0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter Name="ContentSite"
                                    IsHitTestVisible="False"
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                    Margin="10,0,30,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>

                            <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                <Border Name="DropDownBorder"
                                Background="#FF5A5A5A"
                                BorderThickness="0"
                                CornerRadius="4"
                                MinWidth="{TemplateBinding ActualWidth}"
                                MaxHeight="200">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- DatePickerTextBox Style -->
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#FF5A5A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Title Bar -->
            <Grid Height="60" VerticalAlignment="Top" Margin="0,0,0,0">
                <Border Background="#FF2E2E2E" CornerRadius="8,8,0,0">
                    <TextBlock Text="Unesite podatke o izvođacu" 
                              FontSize="24" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Main Form Content -->
            <ScrollViewer Margin="0,60,0,0" VerticalScrollBarVisibility="Auto">
                <Border Background="#FF3E3E3E" CornerRadius="0,0,8,8" Padding="40,30">
                    <StackPanel>

                        <!-- Type Selection - Pojedinačni izvođač ili Muzička grupa -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <RadioButton x:Name="IndividualArtistCheckBox"
                                     IsChecked="{Binding IsIndividualArtist, Mode=TwoWay}"
                                     Grid.Column="0"
                                     Content="Pojedinačni izvođač"
                                     Foreground="White"
                                     FontSize="18"
                                     Margin="0,0,40,0"
                                     VerticalAlignment="Center"
                                     />

                            <RadioButton x:Name="MusicGroupCheckBox"
                                     IsChecked="{Binding IsMusicGroup, Mode=TwoWay}"
                                     Grid.Column="1"
                                     Content="Muzička grupa"
                                     Foreground="White"
                                     FontSize="18"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Artist Name -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi ime izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="ArtistNameTextBox"
                                    Text="{Binding ArtistName, UpdateSourceTrigger=PropertyChanged}"
                                    Height="45"
                                    FontSize="16"
                                    Padding="15,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Artist Stage Name / Pseudonym -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi prezime izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="ArtistSurnameTextBox"
                                    Text="{Binding ArtistSurname, UpdateSourceTrigger=PropertyChanged}"
                                    Height="45"
                                    FontSize="16"
                                    Padding="15,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Genre Selection -->
                        <StackPanel Margin="0,0,0,20" x:Name="GroupSpecificFields">
                            <TextBlock Text="Odaberi žanr izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                        <ComboBox x:Name="GenreComboBox"
                              Height="45"
                              FontSize="16"
                              Background="#FF5A5A5A"
                              Foreground="white"
                              BorderThickness="0"
                              ItemsSource="{Binding Genres}"
                              SelectedItem="{Binding SelectedGenre, Mode=TwoWay}"
                              DisplayMemberPath="Name"/>
                    </StackPanel>

                        <!-- Group Membership (ako je muzička grupa) -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ako je izvođač član grupe, odaberi je:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                        <ComboBox x:Name="GroupMembershipComboBox"
                                     Height="45"
                                     FontSize="16"
                                     Background="#FF5A5A5A"
                                     Foreground="white"
                                     ItemsSource="{Binding Groups}"
                                     SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                                     BorderThickness="0"
                                     DisplayMemberPath="AuthorName">
                            <!-- Dinamički se popunjava sa muzičkim grupama iz baze -->
                            </ComboBox>
                        </StackPanel>



                            

                            <!-- Join Date / Leave Date for MEMBER -->
                    <StackPanel Grid.Column="1" Margin="0,0,0,0">
                        <TextBlock Text="Datum pristupanja grupi:" 
                                          FontSize="16" 
                                          Foreground="White"
                                          Margin="0,0,0,8"/>
                        <DatePicker x:Name="JoinDatePicker"
                                           SelectedDate="{Binding JoinDate, Mode=TwoWay}"
                                           Height="45"
                                           FontSize="16"
                                           Background="#FF5A5A5A"
                                           Foreground="white"
                                           BorderThickness="0"/>
                    </StackPanel>

                    <!-- Biography -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi biografiju izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="BiographyTextBox"
                                    Text="{Binding Biography, UpdateSourceTrigger=PropertyChanged}"
                                    Height="120"
                                    FontSize="16"
                                    Padding="15,10"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    <!-- Editor Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Izaberi editora:" 
                              FontSize="16" 
                              Foreground="White"
                              Margin="0,0,0,8"/>
                        <ComboBox x:Name="EditorComboBox"
                             Height="45"
                             FontSize="16"
                             Background="#FF5A5A5A"
                             Foreground="White"
                             ItemsSource="{Binding Editors}"
                             SelectedItem="{Binding SelectedEditor, Mode=TwoWay}"
                             BorderThickness="0"
                             DisplayMemberPath="Name"     
                             >
                            <!-- Dinamički se popunjava izvođačima iz baze -->
                        </ComboBox>
                    </StackPanel>



                    <!-- Save Button -->
                        <Button Content="Sačuvaj"
                               Width="200"
                               Height="50"
                               Background="#FF7B1FA2"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               BorderThickness="0"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               Command="{Binding SaveCommand}"
                                >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Border>
            </ScrollViewer>

    </Grid>
</Window>