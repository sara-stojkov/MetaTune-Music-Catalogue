<Window x:Class="MetaTune.View.Admin.AddGenreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dodavanje 탑anra"
        Height="450" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="#FF3E3E3E" 
            CornerRadius="8"
            BorderBrush="#FF2A2A2A"
            BorderThickness="1">
        <Grid Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Dodavanje 탑anra"
                       FontSize="36"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <!-- Genre Name Input -->
                <TextBlock Text="Unesi naziv 탑anra"
                          FontSize="20"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <TextBox Height="45"
                         FontSize="16"
                         Padding="10,0"
                         Background="#FF5A5A5A"
                         Foreground="White"
                         BorderThickness="0"
                         Margin="0,0,0,25">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Genre Selection ComboBox -->
                <TextBlock Text="Odaberi kom 탑anru pripada (opciono)"
                          FontSize="20"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <ComboBox Height="45"
                          FontSize="16"
                          Padding="10,0"
                          Background="#FF5A5A5A"
                          Foreground="White"
                          BorderThickness="0"
                          Margin="0,0,0,35">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    BorderThickness="0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <ContentPresenter Grid.Column="0"
                                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                    VerticalAlignment="Center"
                                                                    Margin="10,0,0,0"/>

                                                    <Path Grid.Column="1"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Fill="White"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,15,0"/>
                                                </Grid>
                                            </Border>

                                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   Placement="Bottom"
                                                   AllowsTransparency="True">
                                                <Border Background="#FF5A5A5A"
                                                        BorderThickness="0"
                                                        CornerRadius="4"
                                                        Margin="0,2,0,0">
                                                    <ScrollViewer MaxHeight="200">
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>
                    <!-- Add your genre items here -->
                    <ComboBoxItem Content="Rok"/>
                    <ComboBoxItem Content="Pop"/>
                    <ComboBoxItem Content="Jazz"/>
                </ComboBox>

                <!-- Confirm Button -->
                <Button Content="Potvrdi"
                        Height="55"
                        Width="200"
                        FontSize="20"
                        FontWeight="Medium"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ConfirmButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>