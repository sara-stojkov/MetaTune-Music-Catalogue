<Window x:Class="MetaTune.View.Admin.AddSongDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="Dodavanje pesme"
        Height="750" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF4A4A4A"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="ComboBgBrush" Color="#FF5A5A5A"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF5A5A5A"/>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ComboBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource ComboBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="787*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>

        <Grid Height="80" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Border Background="#FF2E2E2E">
                <TextBlock Text="Dodaj novu pesmu" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Main Form Content -->
        <ScrollViewer Margin="0,80,0,80" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
            <Border Background="#FF3E3E3E" Padding="40,30">
                <StackPanel>

                    <!-- Song Name -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Naziv pesme:*" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <TextBox x:Name="SongNameTextBox"
                                Text="{Binding SongName, UpdateSourceTrigger=PropertyChanged}"
                                Height="45"
                                FontSize="16"
                                Padding="15,0"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Album Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Odaberi album:*" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <ComboBox x:Name="AlbumComboBox"
                                 Height="45"
                                 FontSize="16"
                                 Background="White"
                                 Foreground="Black"
                                 ItemsSource="{Binding Albums}"
                                 SelectedItem="{Binding SelectedAlbum, Mode=TwoWay}"
                                 BorderThickness="0"
                                 DisplayMemberPath="WorkName">   
                            <!-- Dinamički se popunjava albumima iz baze -->
                        </ComboBox>
                    </StackPanel>

                    <!-- Authors -->
                    <TextBlock Text="Odaberi sve autore pesme:"
                      FontSize="16" Foreground="White" Margin="0,0,0,10"/>

                                <Border Background="#FF5A5A5A" CornerRadius="4" Margin="0,0,0,25">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="GenreListBox"
                                 ItemsSource="{Binding Authors}"
                                 SelectionMode="Multiple"
                                 DisplayMemberPath="AuthorName"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 SelectionChanged="AuthorListBox_SelectionChanged">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </ScrollViewer>
                    </Border>

                    <!-- Publish Date -->
                        <StackPanel Grid.Column="1" Margin="0,0,0,0">
                            <TextBlock Text="Datum objavljivanja:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <DatePicker x:Name="PublishDatePicker"
                                       SelectedDate="{Binding PublishDate, Mode=TwoWay}"
                                       Height="45"
                                       FontSize="16"
                                       Background="#FF5A5A5A"
                                       Foreground="White"
                                       BorderThickness="0"/>
                        </StackPanel>

                        <!-- Genre Selection -->
                    <StackPanel Margin="0,20,0,20">
                        <TextBlock Text="Žanr:" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <ComboBox x:Name="GenreComboBox"
                                 Height="45"
                                 FontSize="16"
                                 Background="White"
                                 Foreground="Black"
                                 ItemsSource="{Binding Genres}"
                                 SelectedItem="{Binding SelectedGenre, Mode=TwoWay}"
                                 BorderThickness="0"
                                 DisplayMemberPath="Name">
                        </ComboBox>
                    </StackPanel>
                  

                    <!-- Song Description -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Opis pesme:" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <TextBox x:Name="DescriptionTextBox"
                                Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                Height="100"
                                FontSize="16"
                                Padding="15,10"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>


                    <!-- Editor Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Izaberi editora:" 
                              FontSize="16" 
                              Foreground="White"
                              Margin="0,0,0,8"/>
                        <ComboBox x:Name="EditorComboBox"
                             Height="45"
                             FontSize="16"
                             Background="White"
                             Foreground="White"
                             ItemsSource="{Binding Editors}"
                             SelectedItem="{Binding SelectedEditor, Mode=TwoWay}"
                             BorderThickness="0"
                             DisplayMemberPath="Name">   
                            <!-- Dinamički se popunjava izvođačima iz baze -->
                        </ComboBox>
                    </StackPanel>       
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Bottom Action Buttons -->
        <Grid Height="80" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <Border Background="#FF2E2E2E">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">

                    <!-- Save Button -->
                    <Button Content="Sačuvaj"
                           Width="150"
                           Height="50"
                           Background="#FF7B1FA2"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand"
                           Command="{Binding SaveCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6A1B9A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>