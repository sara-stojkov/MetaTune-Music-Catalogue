<Page x:Class="MetaTune.View.Admin.AdministratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Administrator - početna"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="80" VerticalAlignment="Top">
                <!-- Welcome Avatar Circle -->
                <Ellipse Width="60" Height="60" 
                         Fill="#FF4CAF50" 
                         HorizontalAlignment="Left" 
                         Margin="30,10,0,0"/>

                <!-- Welcome Text -->
                <TextBlock Text="Dragi administratore - dobrodošao!" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="110,0,0,0"/>

                <!-- Logout Button -->
                <Button Content="Odjavi me" 
                        Width="150" 
                        Height="50"
                        Background="#FFE53935"
                        Foreground="White"
                        FontSize="20"
                        FontWeight="Medium"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Margin="0,15,30,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main Content Area -->
            <Grid Margin="30,100,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="430"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Action Buttons -->
                <StackPanel Grid.Column="0" Margin="10,50,20,0">

                    <!-- Add New Editor Button -->
                    <Button Height="65" 
                            Background="#3D957C"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Dodaj novog urednika"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF8E8D1F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Delete Selected Editor Button -->
                    <Button Height="65" 
                            Background="#FFD32F2F"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Obriši odabranog urednika"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFC62828"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Edit Selected Editor Button -->
                    <Button Height="65" 
                            Background="#FF9E9D24"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Izmeni odabranog urednika"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF2E7D32"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Performer Button -->
                    <Button Height="65" 
                            Background="#FF43A047"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novog izvođača"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Work Button -->
                    <Button Height="65" 
                            Background="#FF00796B"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novo delo"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF00695C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Genre Button -->
                    <Button Height="65" 
                            Background="#546AA8"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novi žanr"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>

                <!-- Right Panel - Editors DataGrid -->
                <Border Grid.Column="1" 
                        Background="#FF5A5A5A" 
                        CornerRadius="4"
                        Margin="20,0,0,0">
                    <Grid>
                        <!-- Header -->
                        <Border Height="50" 
                                Background="#FF3A3A3A" 
                                CornerRadius="4,4,0,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="Urednici" 
                                      FontSize="22" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Margin="0,50,0,0"
                                  AutoGenerateColumns="False"
                                  Background="#FF5A5A5A"
                                  Foreground="White"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  RowBackground="#FF5A5A5A"
                                  AlternatingRowBackground="#FF4A4A4A"
                                  CanUserAddRows="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#FF7B1FA2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ime" 
                                                   Binding="{Binding FirstName}" 
                                                   Width="*"/>
                                <DataGridTextColumn Header="Prezime" 
                                                   Binding="{Binding LastName}" 
                                                   Width="*"/>
                                <DataGridTextColumn Header="Email" 
                                                   Binding="{Binding Email}" 
                                                   Width="1.5*"/>
                                <DataGridTextColumn Header="Žanrovi" 
                                                   Binding="{Binding Genres}" 
                                                   Width="*"/>
                                <DataGridTextColumn Header="Količina unetog sadržaja" 
                                                   Binding="{Binding ContentCount}" 
                                                   Width="1.5*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>