<Window x:Class="MetaTune.View.Admin.AddAlbumDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="Dodavanje albuma"
        Height="850" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF4A4A4A"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <Grid Height="80" VerticalAlignment="Top">
            <Border Background="#FF2E2E2E">
                <TextBlock Text="Dodaj novi album" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
            </Border>
        </Grid>

        <!-- Main Form Content -->
        <ScrollViewer Margin="0,80,0,80" VerticalScrollBarVisibility="Auto">
            <Border Background="#FF3E3E3E" Padding="40,30">
                <StackPanel>

                    <!-- Album Name -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Naziv albuma:*" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <TextBox x:Name="AlbumNameTextBox"
                                Height="45"
                                FontSize="16"
                                Padding="15,0"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Artist Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Izaberi izvođača:*" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <ComboBox x:Name="ArtistComboBox"
                                 Height="45"
                                 FontSize="16"
                                 Background="#FF5A5A5A"
                                 Foreground="White"
                                 BorderThickness="0">
                            <ComboBoxItem Content="-- Izaberi izvođača --" IsSelected="True"/>
                            <!-- Dinamički se popunjava izvođačima iz baze -->
                        </ComboBox>
                    </StackPanel>

                    <!-- Two columns: Genre and Release Date -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Genre Selection -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Žanr:*" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="GenreComboBox"
                                     Height="45"
                                     FontSize="16"
                                     Background="#FF5A5A5A"
                                     Foreground="White"
                                     BorderThickness="0">
                                <ComboBoxItem Content="Rock"/>
                                <ComboBoxItem Content="Pop" IsSelected="True"/>
                                <ComboBoxItem Content="Jazz"/>
                                <ComboBoxItem Content="Classical"/>
                                <ComboBoxItem Content="Hip Hop"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Folk"/>
                                <ComboBoxItem Content="Metal"/>
                                <ComboBoxItem Content="Blues"/>
                                <ComboBoxItem Content="Country"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Release Date -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Datum objavljivanja:*" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <DatePicker x:Name="ReleaseDatePicker"
                                       Height="45"
                                       FontSize="16"
                                       Background="White"
                                       Foreground="White"
                                       BorderThickness="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Album Description -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Opis albuma:" 
                                  FontSize="16" 
                                  Foreground="White"
                                  Margin="0,0,0,8"/>
                        <TextBox x:Name="DescriptionTextBox"
                                Height="100"
                                FontSize="16"
                                Padding="15,10"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Editor Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Izaberi editora:" 
                            FontSize="16" 
                            Foreground="White"
                            Margin="0,0,0,8"/>
                                    <ComboBox x:Name="EditorComboBox"
                            Height="45"
                            FontSize="16"
                            Background="#FF5A5A5A"
                            Foreground="Black"
                            ItemsSource="{Binding Editors}"
                            SelectedItem="{Binding SelectedEditor, Mode=TwoWay}"
                            BorderThickness="0"
                            DisplayMemberPath="Name"     
                           >
                            <!-- Dinamički se popunjava izvođačima iz baze -->
                        </ComboBox>
                    </StackPanel>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Bottom Action Buttons -->
        <Grid Height="80" VerticalAlignment="Bottom">
            <Border Background="#FF2E2E2E">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">

                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton"
                           Content="Otkaži"
                           Width="150"
                           Height="50"
                           Background="#FF5A5A5A"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Medium"
                           BorderThickness="0"
                           Margin="0,0,20,0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6A6A6A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Save Button -->
                    <Button x:Name="SaveButton"
                           Content="Sačuvaj"
                           Width="150"
                           Height="50"
                           Background="#FF7B1FA2"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF6A1B9A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>