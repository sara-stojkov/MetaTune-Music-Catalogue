<Window x:Class="MetaTune.View.Admin.AddEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MetaTune.ViewModel.Admin"
        mc:Ignorable="d"
        Title="Admin - dodavanje urednika"
        Height="800" Width="515"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterOwner">

    <Border Background="#FF3E3E3E"
            CornerRadius="8"
            BorderBrush="#FF2A2A2A"
            BorderThickness="1">

        <Grid Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Unesite podatke:"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <!-- First Name -->
                <TextBlock Text="Unesi ime:" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Height="45" FontSize="16" Padding="10,0"
                         Background="#FF5A5A5A" Foreground="White"
                         BorderThickness="0" Margin="0,0,0,20"
                         VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Last Name -->
                <TextBlock Text="Unesi prezime:" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                         Height="45" FontSize="16" Padding="10,0"
                         Background="#FF5A5A5A" Foreground="White"
                         BorderThickness="0" Margin="0,0,0,20"
                         VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Email -->
                <TextBlock Text="Unesi email:" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Height="45" FontSize="16" Padding="10,0"
                         Background="#FF5A5A5A" Foreground="White"
                         BorderThickness="0" Margin="0,0,0,20"
                         VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Password -->
                <TextBlock Text="Unesi lozinku:" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="45" FontSize="16" Padding="10,0"
                             Background="#FF5A5A5A" Foreground="White"
                             BorderThickness="0" Margin="0,0,0,20"
                             VerticalContentAlignment="Center"
                             PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <!-- Genres -->
                <TextBlock Text="Odaberi sve žanrove urednika:"
                          FontSize="16" Foreground="White" Margin="0,0,0,10"/>

                <Border Background="#FF5A5A5A" CornerRadius="4" Margin="0,0,0,25">
                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="GenreListBox"
                                 ItemsSource="{Binding Genres}"
                                 SelectionMode="Multiple"
                                 DisplayMemberPath="Name"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 SelectionChanged="GenreListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox Grid.Column="0"
                                                                  IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                                  VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </Border>

                <!-- Register Button -->
                <Button Content="{Binding ButtonText}"
                        Height="50" Width="300"
                        FontSize="20" FontWeight="Medium"
                        Background="#FF7B1FA2" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        Command="{Binding RegisterCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
