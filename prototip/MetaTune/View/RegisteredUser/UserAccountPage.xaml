<Page x:Class="MetaTune.View.RegisteredUser.UserAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Registrovani korisnik - profilna"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="80" VerticalAlignment="Top">
                <!-- Welcome Avatar Circle -->
                <Ellipse Width="60" Height="60" 
                         Fill="#FF00ACC1" 
                         HorizontalAlignment="Left" 
                         Margin="30,10,0,0"/>

                <!-- Welcome Text -->
                <TextBlock Text="Dobrodošao!" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="110,0,0,0"/>

                <!-- Navigation Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,15,30,0">

                    <!-- Playlists Button -->
                    <Button Content="Plejliste" 
                            Width="140" 
                            Height="50"
                            Background="#FF43A047"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Go Back Button -->
                    <Button Content="Idi nazad" 
                            Width="140" 
                            Height="50"
                            Background="#FFD4A574"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFC89563"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Logout Button -->
                    <Button Content="Odjavi me" 
                            Width="140" 
                            Height="50"
                            Background="#FFE53935"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFD32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Margin="30,100,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Personal Info -->
                <Border Grid.Column="0" 
                        Background="#FF3E3E3E"
                        CornerRadius="8"
                        Padding="40">
                    <StackPanel VerticalAlignment="Center">

                        <!-- Title -->
                        <TextBlock Text="Izmenite lične podatke:"
                                  FontSize="28"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,0,0,40"
                                  HorizontalAlignment="Center"/>

                        <!-- First Name -->
                        <TextBlock Text="Unesi ime:"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>

                        <TextBox x:Name="FirstNameTextBox"
                                Height="45"
                                FontSize="16"
                                Padding="10,0"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,0,25">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Last Name -->
                        <TextBlock Text="Unesi prezime:"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>

                        <TextBox x:Name="LastNameTextBox"
                                Height="45"
                                FontSize="16"
                                Padding="10,0"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,0,25">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Email -->
                        <TextBlock Text="Unesi email:"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>

                        <TextBox x:Name="EmailTextBox"
                                Height="45"
                                FontSize="16"
                                Padding="10,0"
                                Background="#FF5A5A5A"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,0,25">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Password -->
                        <TextBlock Text="Unesi lozinku:"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"/>

                        <PasswordBox x:Name="PasswordBox"
                                    Height="45"
                                    FontSize="16"
                                    Padding="10,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Margin="0,0,0,35">
                            <PasswordBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>

                        <!-- Save Button -->
                        <Button Content="Sačuvaj"
                                Height="50"
                                FontSize="20"
                                FontWeight="Medium"
                                Background="#FF7B1FA2"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Right Panel - Privacy Settings -->
                <Border Grid.Column="2" 
                        Background="#FF3E3E3E"
                        CornerRadius="8"
                        Padding="40">
                    <StackPanel VerticalAlignment="Center">

                        <!-- Title -->
                        <TextBlock Text="Upravljajte svojim podacima"
                                  FontSize="28"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,0,0,40"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"/>

                        <!-- Other Users See Contact -->
                        <TextBlock Text="Da li želite da drugi ulogovani korisnici vide Vaš kontakt?"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"
                                  TextWrapping="Wrap"/>

                        <ComboBox x:Name="ContactVisibilityComboBox"
                                 Height="45"
                                 FontSize="16"
                                 Padding="10,0"
                                 Background="#FF5A5A5A"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Margin="0,0,0,35"
                                 SelectedIndex="0">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <ContentPresenter Grid.Column="0"
                                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                            VerticalAlignment="Center"
                                                                            Margin="10,0,0,0"/>

                                                            <Path Grid.Column="1"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                  Fill="White"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,15,0"/>
                                                        </Grid>
                                                    </Border>

                                                    <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border Background="#FF5A5A5A"
                                                                BorderThickness="0"
                                                                CornerRadius="4"
                                                                Margin="0,2,0,0"
                                                                MinWidth="{TemplateBinding ActualWidth}">
                                                            <ScrollViewer MaxHeight="200">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="DA"/>
                            <ComboBoxItem Content="NE"/>
                        </ComboBox>

                        <!-- Reviews Public -->
                        <TextBlock Text="Da li želite da Vaše recenzije budu javno dostupne?"
                                  FontSize="16"
                                  Foreground="White"
                                  Margin="0,0,0,10"
                                  TextWrapping="Wrap"/>

                        <ComboBox x:Name="ReviewsPublicComboBox"
                                 Height="45"
                                 FontSize="16"
                                 Padding="10,0"
                                 Background="#FF5A5A5A"
                                 Foreground="White"
                                 BorderThickness="0"
                                 Margin="0,0,0,50"
                                 SelectedIndex="0">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            BorderThickness="0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <ContentPresenter Grid.Column="0"
                                                                            Content="{TemplateBinding SelectionBoxItem}"
                                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                            VerticalAlignment="Center"
                                                                            Margin="10,0,0,0"/>

                                                            <Path Grid.Column="1"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                  Fill="White"
                                                                  VerticalAlignment="Center"
                                                                  Margin="0,0,15,0"/>
                                                        </Grid>
                                                    </Border>

                                                    <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           Placement="Bottom"
                                                           AllowsTransparency="True">
                                                        <Border Background="#FF5A5A5A"
                                                                BorderThickness="0"
                                                                CornerRadius="4"
                                                                Margin="0,2,0,0"
                                                                MinWidth="{TemplateBinding ActualWidth}">
                                                            <ScrollViewer MaxHeight="200">
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="DA"/>
                            <ComboBoxItem Content="NE"/>
                        </ComboBox>

                        <!-- Save Button -->
                        <Button Content="Sačuvaj"
                                Height="50"
                                FontSize="20"
                                FontWeight="Medium"
                                Background="#FF7B1FA2"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>