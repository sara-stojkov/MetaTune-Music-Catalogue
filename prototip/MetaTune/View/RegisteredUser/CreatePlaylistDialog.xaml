<Window x:Class="MetaTune.View.User.CreatePlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registrovani korisnik - kreiranje plejliste"
        Height="350" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="#FF3E3E3E" 
            CornerRadius="8"
            BorderBrush="#FF2A2A2A"
            BorderThickness="1">
        <Grid Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Kreiraj novu plejlistu"
                       FontSize="32"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <!-- Playlist Name Input -->
                <TextBlock Text="Unesi naziv plejliste:"
                          FontSize="16"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <TextBox x:Name="PlaylistNameTextBox"
                         Height="50"
                         FontSize="16"
                         Padding="10,0"
                         Background="#FF5A5A5A"
                         Foreground="White"
                         BorderThickness="0"
                         Margin="0,0,0,40">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Create Button -->
                <Button Content="Kreiraj"
                        Height="50"
                        FontSize="20"
                        FontWeight="Medium"
                        Background="#FF7B1FA2"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A1B9A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>