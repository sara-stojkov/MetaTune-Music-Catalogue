<Page x:Class="MetaTune.View.MusicEditor.EditorHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Urednik - početna"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="80" VerticalAlignment="Top">
                <!-- Welcome Avatar Circle -->
                <Ellipse Width="60" Height="60" 
                         Fill="#FF9C27B0" 
                         HorizontalAlignment="Left" 
                         Margin="30,10,0,0"/>

                <!-- Welcome Text -->
                <TextBlock Text="Dragi uredniče - dobrodošao!" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="110,0,0,0"/>

                <!-- Logout Button -->
                <Button Content="Odjavi me" 
                        Width="150" 
                        Height="50"
                        Background="#FFE53935"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="Medium"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Margin="0,15,30,0"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFD32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main Content Area -->
            <Grid Margin="30,100,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="430"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Action Buttons -->
                <StackPanel Grid.Column="0" Margin="10,50,20,0">

                    <!-- Add New Performer Button -->
                    <Button Height="65" 
                            Background="#FF43A047"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novog izvođača"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Work Button -->
                    <Button Height="65" 
                            Background="#FF00796B"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,20" Click="Button_Click_1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novu pesmu"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF00695C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Height="65" 
                        Background="#8212276B"
                        BorderThickness="0"
                        Cursor="Hand" Click="Button_Click"
                            >
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                                <TextBlock Text="Unesi novi album"
                                                    FontSize="20"
                                                    FontWeight="Medium"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF00695C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Genre Button -->
                    <Button Height="65" 
                            Background="#546AA8"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,20,0,20"
                            Click="AddGenreButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Unesi novi žanr"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Add New Genre Button -->
                    <Button Height="65" 
                            Background="#FF9E9D24"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ViewTasks_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="Pogledaj svoje zadatke"
                                                          FontSize="20"
                                                          FontWeight="Medium"
                                                          Foreground="White"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>

                <!-- Right Panel - Pending Reviews -->
                <Border Grid.Column="1" 
                        Background="#FF3E3E3E" 
                        CornerRadius="12"
                        Margin="20,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                    </Border.Effect>
                    <Grid>
                        <!-- Header with gradient -->
                        <Border Height="60" 
                                CornerRadius="12,12,0,0"
                                VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF2E2E2E" Offset="0"/>
                                    <GradientStop Color="#FF3E3E3E" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="📋 Komentari na čekanju" 
                                      FontSize="26" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Reviews List -->
                        <ScrollViewer Margin="0,60,0,0" 
                                     VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="ReviewsItemsControl" Margin="20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF4A4A4A"
                                                CornerRadius="8"
                                                Margin="0,0,0,12"
                                                Padding="20,15">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                                            </Border.Effect>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Work Info and Date -->
                                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock FontSize="18"
                                                                  FontWeight="SemiBold"
                                                                  Foreground="#FF7B1FA2"
                                                                  Margin="0,0,0,5">
                                                            <Run Text="📝 Review"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="16"
                                                                  Foreground="#FFCCCCCC">
                                                            <Run Text="🎵 Odnosi se na: "/>
                                                            <Run Text="{Binding WorkTitle}" FontWeight="Medium"/>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1"
                                                              Text="{Binding ReviewDate, StringFormat='dd.MM.yyyy HH:mm'}"
                                                              FontSize="14"
                                                              Foreground="#FFAAAAAA"
                                                              VerticalAlignment="Center"
                                                              FontWeight="Medium"/>
                                                </Grid>

                                                <!-- Review Content -->
                                                <Border Grid.Row="1"
                                                        Background="#FF3A3A3A"
                                                        CornerRadius="6"
                                                        Padding="15,10"
                                                        Margin="0,0,0,15">
                                                    <TextBlock Text="{Binding Content}"
                                                              FontSize="15"
                                                              Foreground="White"
                                                              TextWrapping="Wrap"
                                                              LineHeight="22"/>
                                                </Border>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Row="2" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Right">

                                                    <!-- Approve Button -->
                                                    <Button Content="✓ Odobri"
                                                            Width="120"
                                                            Height="40"
                                                            Background="#FF43A047"
                                                            Foreground="White"
                                                            FontSize="16"
                                                            FontWeight="Medium"
                                                            BorderThickness="0"
                                                            Margin="0,0,10,0"
                                                            Cursor="Hand"
                                                            Tag="{Binding ReviewId}"
                                                            Click="ApproveButton_Click">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    CornerRadius="6">
                                                                                <Border.Effect>
                                                                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                                                                </Border.Effect>
                                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                                VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FF388E3C"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>

                                                    <!-- Delete Button -->
                                                    <Button Content="✕ Obriši"
                                                            Width="120"
                                                            Height="40"
                                                            Background="#FFE53935"
                                                            Foreground="White"
                                                            FontSize="16"
                                                            FontWeight="Medium"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Tag="{Binding ReviewId}"
                                                            Click="DeleteButton_Click">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    CornerRadius="6">
                                                                                <Border.Effect>
                                                                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                                                                </Border.Effect>
                                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                                VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FFD32F2F"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>