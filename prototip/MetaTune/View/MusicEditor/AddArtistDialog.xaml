<Window x:Class="MetaTune.View.MusicEditor.AddArtistDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Dodavanje izvođača"
      Background="#FF4A4A4A">

    <Grid>
        <!-- Main Container -->
        <Grid Width="1200" Height="800">

            <!-- Header Section -->
            <Grid Height="100" VerticalAlignment="Top">
                <!-- App Title -->
                <TextBlock Text="MetaTune - Dodavanje izvođača" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="40,0,0,0"/>

                <!-- Back/Cancel Button -->
                <Button Content="← Nazad" 
                        Width="120" 
                        Height="45"
                        Background="IndianRed"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Medium"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Margin="0,25,40,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6A6A6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Title Bar -->
            <Grid Height="60" VerticalAlignment="Top" Margin="40,110,40,0">
                <Border Background="#FF2E2E2E" CornerRadius="8,8,0,0">
                    <TextBlock Text="Unesite podatke o izvođacu" 
                              FontSize="24" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Main Form Content -->
            <ScrollViewer Margin="40,170,40,80" VerticalScrollBarVisibility="Auto">
                <Border Background="#FF3E3E3E" CornerRadius="0,0,8,8" Padding="40,30">
                    <StackPanel>

                        <!-- Type Selection - Pojedinačni izvođač ili Muzička grupa -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="IndividualArtistCheckBox"
                                     Grid.Column="0"
                                     Content="Pojedinačni izvođač"
                                     Foreground="White"
                                     FontSize="18"
                                     Margin="0,0,40,0"
                                     VerticalAlignment="Center"
                                     IsChecked="True"/>

                            <CheckBox x:Name="MusicGroupCheckBox"
                                     Grid.Column="1"
                                     Content="Muzička grupa"
                                     Foreground="White"
                                     FontSize="18"
                                     VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Artist Name -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi ime izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="ArtistNameTextBox"
                                    Height="45"
                                    FontSize="16"
                                    Padding="15,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Artist Stage Name / Pseudonym -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi prezime izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="ArtistSurnameTextBox"
                                    Height="45"
                                    FontSize="16"
                                    Padding="15,0"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Genre Selection (ako je muzička grupa) -->
                        <StackPanel Margin="0,0,0,20" x:Name="GroupSpecificFields">
                            <TextBlock Text="Odaberi žanr izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="GenreComboBox"
                                     Height="45"
                                     FontSize="16"
                                     Background="#FF5A5A5A"
                                     Foreground="White"
                                     BorderThickness="0">
                                <ComboBoxItem Content="Rock"/>
                                <ComboBoxItem Content="Pop"/>
                                <ComboBoxItem Content="Jazz"/>
                                <ComboBoxItem Content="Classical"/>
                                <ComboBoxItem Content="Hip Hop"/>
                                <ComboBoxItem Content="Electronic"/>
                                <ComboBoxItem Content="Folk"/>
                                <ComboBoxItem Content="Metal"/>
                                <ComboBoxItem Content="Blues"/>
                                <ComboBoxItem Content="Country"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Group Membership (ako je muzička grupa) -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ako je izvođač član grupe, odaberi je:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <ComboBox x:Name="GroupMembershipComboBox"
                                     Height="45"
                                     FontSize="16"
                                     Background="#FF5A5A5A"
                                     Foreground="White"
                                     BorderThickness="0">
                                <ComboBoxItem Content="-- Nije član grupe --" IsSelected="True"/>
                                <!-- Dinamički se popunjava sa muzičkim grupama iz baze -->
                            </ComboBox>
                        </StackPanel>

                        <!-- Rating (1-5) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Dodaj svoju ocenu (1-5):" 
                                          FontSize="16" 
                                          Foreground="White"
                                          Margin="0,0,0,8"/>
                                <ComboBox x:Name="RatingComboBox"
                                         Height="45"
                                         FontSize="16"
                                         Background="#FF5A5A5A"
                                         Foreground="White"
                                         BorderThickness="0">
                                    <ComboBoxItem Content="1 - Loše"/>
                                    <ComboBoxItem Content="2 - Ispod proseka"/>
                                    <ComboBoxItem Content="3 - Prosečno" IsSelected="True"/>
                                    <ComboBoxItem Content="4 - Dobro"/>
                                    <ComboBoxItem Content="5 - Odlično"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Join Date / Leave Date for MEMBER -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Datum pristupanja grupi:" 
                                          FontSize="16" 
                                          Foreground="White"
                                          Margin="0,0,0,8"/>
                                <DatePicker x:Name="JoinDatePicker"
                                           Height="45"
                                           FontSize="16"
                                           Background="#FF5A5A5A"
                                           Foreground="White"
                                           BorderThickness="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Biography -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Unesi biografiju izvođača:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="BiographyTextBox"
                                    Height="120"
                                    FontSize="16"
                                    Padding="15,10"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Review / Additional Notes -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Dodaj svoju recenziju:" 
                                      FontSize="16" 
                                      Foreground="White"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="ReviewTextBox"
                                    Height="100"
                                    FontSize="16"
                                    Padding="15,10"
                                    Background="#FF5A5A5A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Save Button -->
                        <Button Content="Sačuvaj"
                               Width="200"
                               Height="50"
                               Background="#FF7B1FA2"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               BorderThickness="0"
                               HorizontalAlignment="Center"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6A1B9A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Border>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>