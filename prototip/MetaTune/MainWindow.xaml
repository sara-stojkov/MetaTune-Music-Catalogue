<Window x:Class="MetaTune.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetaTune"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        
        Title="Meta Tune" Height="450" Width="800">
    <Grid Background="#FD4D4D4D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Style>
            <Style/>
        </Grid.Style>
        <Label Content="W E L C O M E" VerticalAlignment="Center" Height="132" FontFamily="Chiller" FontSize="110" Foreground="#FFC50000" BorderBrush="White" Margin="110,0,110,0" Grid.Column="1">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <Button Name="playPause" Content="Pause" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="110,368,0,0" VerticalAlignment="Top" Height="34" Width="70" Click="Button_Click"/>

    </Grid>
</Window>
