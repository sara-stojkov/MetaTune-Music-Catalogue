        xmlns:local="clr-namespace:MetaTune"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        
        Title="Meta Tune" Height="450" Width="800">
    <Grid Background="#FD4D4D4D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="361*"/>
        </Grid.ColumnDefinitions>
        <Grid.Style>
            <Style/>
        </Grid.Style>
        <Label Content="W E L C O M E" VerticalAlignment="Top" Height="132" FontFamily="Chiller" FontSize="110" Foreground="#FFC50000" BorderBrush="White" Margin="26,150,104,0" Grid.Column="2">
